@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo Producto</h1>

<form asp-action="Create" method="POST">

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input type="text" class="form-control" id="Name" name="Name" placeholder="Nombre..">
        <span class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Precio</label>
        <input type="number" class="form-control" id="Price" name="Price" placeholder="Precio..">
        <span class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Disponible</label>
        <input type="number" class="form-control" id="Stock" name="Stock" placeholder="Disponible..">
        <span class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Guardar</button>
    <button class="btn btn-outline-secondary" type="button" onclick="window.location.href='/Products/Index'">Volver </button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

