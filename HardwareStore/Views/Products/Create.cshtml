@model HardwareStore.Data.Entities.Products
@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo Producto</h1>

<form asp-action="Create" method="POST">
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input type="text" class="form-control" id="Name" name="Name" placeholder="Nombre del producto..">
        <span class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Precio</label>
        <input type="text" class="form-control" id="Price" name="Price" placeholder="Precio del producto..">
        <span class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Stock</label>
        <input type="text" class="form-control" id="Stock" name="Stock" placeholder="Cantidad en stock..">
        <span class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Guardar</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
