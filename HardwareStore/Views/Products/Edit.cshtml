@model HardwareStore.Data.Entities.Products
@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Producto</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name">Nombre</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Precio:</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock">Cantidad</label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Guardar</button>
    <button type="button" class="btn btn-outline-secondary" onclick="window.location.href='/Products/Index'">Volver</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}