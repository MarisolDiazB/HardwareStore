@model List<HardwareStore.Data.Entities.Products>
@{
    ViewData["Title"] = "Index";
}
<h2>Lista de Productos</h2>
<button class="btn btn-primary" onclick="window.location.href='/Products/Create'">Nuevo Producto</button>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Stock</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@product.Id">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@product.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}