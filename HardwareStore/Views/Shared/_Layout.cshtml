<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HardwareStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HardwareStore.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <style>
        body {
            background-color: #fff;
            font-family: 'Roboto', sans-serif;
            color: #333;
        }

        .navbar {
            background-color: #007bff !important;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-size: 24px;
            font-weight: 700;
            color: #fff !important;
            text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
        }

            .navbar-brand i {
                margin-right: 5px;
            }

        .nav-link {
            font-weight: 500;
            color: #fff !important;
            padding: 0.5rem 1rem;
            text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
        }

            .nav-link:hover {
                color: #f8f9fa !important;
            }

        .footer {
            background-color: #007bff;
            color: #fff;
            padding: 1rem 0;
            text-align: center;
            text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
        }

            .footer a {
                color: #fff;
                text-decoration: underline;
                text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
            }

        .btn-custom {
            background-color: #007bff;
            color: #fff;
            border-radius: 20px;
            padding: 0.5rem 1rem;
            border: none;
            text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }

      /*  .container {
            margin-top: 2rem;
        }
        .main-container {
            margin-top: 0;
                }*/


        .card {
            padding: 10px;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-tools"></i> HardwareStore
                </a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="navbar-nav mr-auto">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i> Home
                        </a>
                        <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">
                            <i class="fas fa-hammer"></i> Productos
                        </a>
                        <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="Index">
                            <i class="fas fa-user-tie"></i> Empleados
                        </a>
                    </div>
                    <div class="navbar-nav ml-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">
                                <i class="fas fa-sign-out-alt"></i> Cerrar sesión
                            </a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-sign-in-alt"></i> Login
                            </a>
                            <a class="nav-link" asp-controller="Account" asp-action="Register">
                                <i class="fas fa-user-plus"></i> Register
                            </a>
                        }              
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2024 - HardwareStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">
                <i class="fas fa-lock"></i> Privacy
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>