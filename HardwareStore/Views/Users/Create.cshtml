@model HardwareStore.DTOs.UserDTO

@{
    ViewData["Title"] = "Nuevo Usuario";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .main-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin-top: -50px;
    }

    .card {
        width: 100%;
        max-width: 1000px;
        margin: 20px;
        padding: 20px;
    }

    .btn-custom {
        background-color: #007bff;
        color: white;
        border-radius: 30px;
        padding: 10px 20px;
        font-size: 16px;
    }

        .btn-custom:hover {
            background-color: #0056b3;
        }

    .btn-outline-custom {
        border-color: #007bff;
        color: #007bff;
        border-radius: 30px;
        padding: 10px 20px;
        font-size: 16px;
    }

        .btn-outline-custom:hover {
            background-color: #007bff;
            color: white;
        }

    .form-label {
        font-size: 18px;
    }

    .form-control {
        font-size: 16px;
        padding: 10px;
    }

    .card-header {
        background-color: #007bff;
        color: white;
        text-align: center;
    }
</style>

<div class="main-container">
    <div class="card shadow-sm">
        <div class="card-header">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <partial name="_UserPartial" />

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-custom">Guardar</button>
                    <button type="button" class="btn btn-outline-custom" onclick="window.location.href='/Users/Index'">Volver</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
