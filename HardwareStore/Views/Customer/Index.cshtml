@model List<HardwareStore.Data.Entities.Customer>
@{
    ViewData["Title"] = "Index";
}

<h2>Lista de Cliente</h2>
<button class="btn btn-primary" onclick="window.location.href='/Customer/Create'">Nuevo Cliente</button>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Direccion</th>
            <th>Telefono</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Customeraddress</td>
                <td>@customer.Phone</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.Id">Editar</a> |
                    <form asp-action="Delete" method="post" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este empleado?');">
                        <input type="hidden" name="id" value="@customer.Id" />
                        <button type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-outline-secondary" type="button" onclick="window.location.href='/Products/Index'">Volver </button>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}