{
  "$schema": "http://json.schemastore.org/launchsettings.json",
  // Especifica el esquema JSON utilizado para validar este archivo.

  "iisSettings": {
    "windowsAuthentication": false,
    "anonymousAuthentication": true,
    // Configuraciones para IIS (Internet Information Services).
    // Habilita la autenticación anónima y deshabilita la autenticación de Windows.

    "iisExpress": {
      "applicationUrl": "http://localhost:32438",
      "sslPort": 44359
      // Configuraciones específicas de IIS Express, incluida la URL de la aplicación y el puerto SSL.
    }
  },
  "profiles": {
    // Perfiles de lanzamiento de la aplicación.
    "http": {
      "commandName": "Project",
      "dotnetRunMessages": true,
      "launchBrowser": true,
      "applicationUrl": "http://localhost:5053",
      // Configuraciones para el perfil de lanzamiento HTTP.
      // Se ejecuta el proyecto con el comando "dotnet run" y se muestra la salida de mensajes.
      // Se lanza el navegador automáticamente.

      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
      // Variables de entorno específicas para este perfil, aquí se establece el entorno de ASP.NET Core en "Development".
    },
    "https": {
      "commandName": "Project",
      "dotnetRunMessages": true,
      "launchBrowser": true,
      "applicationUrl": "https://localhost:7198;http://localhost:5053",
      // Configuraciones para el perfil de lanzamiento de IIS Express.
      // Se utiliza el comando "IISExpress" para ejecutar la aplicación.
      // Se lanza el navegador automáticamente.

      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    "IIS Express": {
      "commandName": "IISExpress",
      "launchBrowser": true,
      
      // Se lanza el navegador automáticamente.
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  }
}
